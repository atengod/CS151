/***********************************
//Name: Sort()
//Parameter(s): data:int[] , size:int;
//Return: void
//Description: Sorts data in descending order.
// Label             Task                                            Goto
// 01                /print(Enter filename)/                          02
// 02                /cin = filename/                                03
// 03                [copy(filename)]                                04
// 04                (exit)
***************************************/

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

/****************************************
// Label             Task                                            Goto
// 01                [in = filename]                                 02
// 02                [out = stuff.txt]                               03
// 03                <getline(in,str) != eof()>                      04,06 
// 04                [out.print(str + "\n")]                          03
// 05                [out.close()]                                   06
// 06                [in.close()]                                    07
// 08                (exit)
***************************************/
 
void Sort(int data[], int size)
{
    for (int i = 0; i < size-1; i++)
    {
        int max_idx = i;
        for (int j = i+1; j < size; j++)
          if (data[j] > data[max_idx])
            max_idx = j;
            
        int t = data[max_idx];
        data[max_idx] = data[i];
        data[i] = t;
    }
}
 
void PrintArray(int data[], int size)
{
    int i;
    for (int i = 0; i < size; i++)
        cout << data[i] << " ";
    cout << endl;
}

int main()
{
    srand(time(0));
    int data[20]; 
    for(int i = 0; i < 20; i++)
        data[i] = rand()%100 + 1;
    Sort(data, 20);
    PrintArray(data, 20);
    return 0;
}
