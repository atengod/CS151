//header file declration
#include<iostream>
#include<iomanip>
//namespace
using namespace std;
//defintion for Addition function
void Addition(double a, double b)
{
double res = a + b;
cout<<"Addition of "<<a<<" and "<< b <<" is : "<<res<<endl;
}
//defintion for Subtraction function
void Subtraction(double a, double b)
{
double res = a - b;
cout<<"Subtraction of "<<a<<" and "<< b <<" is : "<<res<<endl;
}
//defintion for Multiplication function

void Multiplication(double a, double b)
{
double res = a * b;
cout<<"Multiplication of "<<a<<" and "<< b <<" is : "<<res<<endl;
}
//defintion for Division function
void Division(double a, double b)
{
if(b != 0)
{
double res = a / b;
cout<<"Division of "<<a<<" and "<< b <<" is : "<<res<<endl;
}
//condition if divide by zero i.e second number is zero
if(b==0)
{
cout<<"Sorry Can not divide by zero.."<<endl;
}
}
//start of main function
int main()
{
//setting the precision to 3 decimal point
cout<<fixed<<setprecision(3)<<endl;
double a, b;
int choice;
//start of do while loop
do
{
//display a menu
cout<<"1. Addition"<<endl;
cout<<"2. Subtraction"<<endl;
cout<<"3. Multiplication"<<endl;
cout<<"4. Division"<<endl;
cout<<"5. Quit"<<endl;
cout<<"Please select a choice: ";
cin>>choice;
//switch to choice
switch(choice)
{
case 1:
cout<<"Enter two numbers: ";
cin>>a>>b;
//call to function
Addition(a, b);
break;
case 2:
cout<<"Enter two numbers: ";
cin>>a>>b;
//call to function
Subtraction(a, b);
break;
case 3:
cout<<"Enter two numbers: ";
cin>>a>>b;
//call to function
Multiplication(a, b);
break;
case 4:
cout<<"Enter two numbers: ";
cin>>a>>b;
//call to function
Division(a, b);
break;
case 5:
cout<<"Exiting the program..."<<endl;
cout<<"Press any key to continue.."<<endl;
break;
}
}while(choice != 5);
return 0;
}
//end of the function
